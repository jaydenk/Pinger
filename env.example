# ── Pushover Credentials ────────────────────────────────────────────────────
PUSHOVER_USER_KEY=your_user_key_here
PUSHOVER_API_TOKEN=your_api_token_here

# ── Target CSV ──────────────────────────────────────────────────────────────
# Host path to the CSV file containing targets to monitor
CSV_PATH=./targets.csv

# ── Ping Settings ───────────────────────────────────────────────────────────
# Default check type: icmp, tcp, dns, or http
# tcp = TCP connection to host:port (good for WAN monitoring, ISPs don't filter it)
# dns = DNS resolution check
PING_TYPE=tcp

# Seconds between checks when target is online
PING_INTERVAL=120

# Seconds between checks after target is confirmed offline
PING_FAIL_INTERVAL=60

# ── Failure Detection ───────────────────────────────────────────────────────
# Number of consecutive failures before a target is considered offline
FAILURE_THRESHOLD=12

# Seconds between checks during failure confirmation (default: 5s x 12 = 1 min)
FAILURE_CHECK_INTERVAL=5

# ── Alert Intervals ─────────────────────────────────────────────────────────
# Seconds between repeated offline alerts (0 = only alert on initial failure)
ALERT_OFFLINE_INTERVAL=1800

# Seconds between online status alerts (0 = never, only alert on recovery)
ALERT_ONLINE_INTERVAL=0

# ── Heartbeat Settings ──────────────────────────────────────────────────────
# Port for the heartbeat HTTP listener (only started if CSV has heartbeat targets)
HEARTBEAT_PORT=8080

# Shared secret for heartbeat auth (senders must pass as Bearer token)
HEARTBEAT_API_KEY=your_shared_secret_here

# Seconds without a heartbeat before considering a target stale/offline
HEARTBEAT_STALE_SECONDS=120
